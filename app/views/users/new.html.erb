<!DOCTYPE html>
<%= provide(:title, "Create User") %>



<div class="container">

  <div class="row">
    <div class="col-md-6">
    <h1 class="center"> Add a New User </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 center" style="padding:40px;">
      <%= image_tag('simpson.png', alt: "User Picture", class: "border") %>
      <%= link_to 'Upload', '#', class:"btn" %>
    </div>
    <div class="col-md-3" style="padding:20px;">
      <br/>
      <form>
          <div class="form-group">
            <label for="fullname">Name</label>
            <input type="text" class="form-control" id="fullname" placeholder="name">
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="email">
          </div>
          <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" id="phone" placeholder="phone">
          </div>
       <hr/>
       <%= link_to "Create", '#', class: "btn btn-lg btn-primary btn-block" %>


      </form>
    </div>
    <div class="col-md-4 col-md-offset-1">
      <%= image_tag('buddha.png', alt:"buddha", style: "") %>
    </div>

</div>
            </div>